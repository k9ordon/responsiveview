{
    "name": "Responsive View - Chrome Helper",
    "version": "1.0",


    "permissions": ["tabs","<all_urls>"],

    "content_scripts": [
    {
        "matches": ["http://*/*"],
        "js": ["client.js"],
        "run_at": "document_idle",
        "all_frames": true
    }
    ],

    "manifest_version": 2,

    "browser_action": {
        "default_title": "Responsive View"
    },

    "background": {
        "scripts": ["background.js"]
    }


}